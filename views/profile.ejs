<!doctype html>
<html>

<head>
    <title>21 Savage Fan Site</title>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" rel="stylesheet" />


    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="container">

        <div class="page-header text-center">
            <h1> <i class="fa-solid fa-dumbbell"></i>
            <a href="/logout" class="logout">Logout</a>
        </div>

        <div class="row">
        </div>
        <div>
            <table class="table table-bordered table-responsive-md table-striped text-center">
                <h1>Workout Tracker</h1>
                <tbody>
                    <tr>
                        <th scope="col" class="width60">
                            Exercise</th>
                        <th scope="col" class="width20">
                            Sets</th>
                        <th scope="col" class="width20">
                            Reps</th>
                        <th scope="col" class="width20">
                            Comments</th>
                    </tr>

                    <% for(var i=0; i<workouts.length; i++) {%>
                        <tr>
                            <td exercise id="exercise" class="pt-3-half"  >
                                <%= workouts[i].exercise %>
                            </td>
                            <td oninput="updateE(this)"  id="sets" class="editable pt-3-half" contenteditable="true">
                                <%= workouts[i].sets %>
                            </td>
                            <td oninput="updateE(this)"  id="reps" class="editable pt-3-half" contenteditable="true">
                                <%= workouts[i].reps %>
                            </td>
                            <td oninput="updateE(this)" id = "comment" class="editable pt-3-half" contenteditable="true">
                                <%= workouts[i].comment %>
                            </td>
                            <td>
                                <button onclick=deleteE(this)>delete</button>
                            </td>
                        </tr>
                        <% } %>
                        
                        <tr>
                            <td exercise id="exercise" class="editable pt-3-half" contenteditable="true" >
                                add exercise
                            </td>
                            <td   id="sets" class="editable pt-3-half" contenteditable="true">
                                number of sets
                            </td>
                            <td   id="reps" class="editable pt-3-half" contenteditable="true">
                                number of reps
                            </td>
                            <td  id = "comment" class="editable pt-3-half" contenteditable="true">
                                any Comments
                            </td>
                            <td>
                                <button onclick=create(this)>Add</button>
                            </td>    
                        </tr>
                        
                </tbody>


            </table>
            <span class="glyphicon glyphicon-plus"></span>
         
        </div>


        <!-- MDB -->
        <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
        <script src="main.js"></script>
        <script>
            let id = 0
        </script>

</body>

</html>